{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "master",
  "targetDefaults": {
    "build": {
      "cache": true,
      "outputs": [
        "{projectRoot}/.svelte-kit",
        "{projectRoot}/.build",
        "{projectRoot}/.vercel"
      ]
    },
    "test": {
      "cache": true,
      "outputs": ["{projectRoot}/coverage"]
    },
    "lint": {
      "cache": true
    },
    "check": {
      "cache": true
    }
  },
  "plugins": [
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "lint"
      }
    }
  ],
  "generators": {
    "@gb-nx/svelte:route": {
      "directory": "",
      "language": "ts",
      "load": "none",
      "style": "scss"
    },
    "@gb-nx/svelte:component": {
      "language": "ts",
      "style": "scss",
      "runes": true
    }
  }
}
