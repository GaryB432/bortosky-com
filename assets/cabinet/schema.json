{
  "$id": "https://bortosky.com/cabinet/schema.json",
  "$schema": "http://json-schema.org/schema#",
  "description": "Bortoskys' Filing Cabinet Schema",
  "type": "object",
  "properties": {
    "hangingFolders": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "maxLength": 5
          },
          "content": {
            "type": "array",
            "items": {
              "oneOf": [
                {
                  "type": "object",
                  "properties": {
                    "folder": {
                      "oneOf": [
                        {
                          "oneOf": [
                            {
                              "type": "string"
                            },
                            {
                              "type": "object",
                              "properties": {
                                "description": {
                                  "type": "string"
                                },
                                "content": {
                                  "type": "array",
                                  "items": {
                                    "$ref": "#/$defs/document"
                                  }
                                }
                              }
                            }
                          ]
                        }
                      ]
                    }
                  }
                },
                {
                  "type": "object",
                  "properties": {
                    "document": {
                      "$ref": "#/$defs/document"
                    }
                  },
                  "additionalProperties": false
                }
              ]
            }
          }
        }
      }
    }
  },
  "$defs": {
    "document": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "date": {
          "type": "string",
          "format": "date"
        }
      }
    }
  }
}
