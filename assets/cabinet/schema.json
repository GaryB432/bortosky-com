{
  "$id": "https://bortosky.com/cabinet/schema.json",
  "$schema": "http://json-schema.org/schema#",
  "description": "Bortoskys' Filing Cabinet Schema",
  "type": "object",
  "properties": {
    "hangingFolders": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "maxLength": 5
          },
          "description": {
            "type": "string"
          },
          "content": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "folder"
              ],
              "additionalProperties": false,
              "properties": {
                "folder": {
                  "oneOf": [
                    {
                      "$ref": "#/$defs/folder"
                    },
                    {
                      "type": "string"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    }
  },
  "$defs": {
    "folder": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "content": {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "$ref": "#/$defs/document"
              },
              { "type": "string" }
            ]
          }
        }
      },
      "additionalProperties": false
    },
    "document": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "date": {
          "type": "string",
          "format": "date"
        }
      },
      "additionalProperties": false
    }
  }
}
